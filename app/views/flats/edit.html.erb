<div class="container mt-5">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Create a new flat 🏡</h1>
        <div class="mt-4">
          <%= simple_form_for(@flat) do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :description %>
            <%= f.input :price_per_night %>
            <%= f.input :number_of_guest %>
            <%= f.submit "Update flat", class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
